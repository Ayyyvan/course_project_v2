{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ path('app_profile') }}">
                                <i class="bi bi-house-door"></i> {{ 'Profile'|trans }}
                            </a>
                        </li>
                    </ul>
                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>
                            <i class="bi bi-box"></i> {{ 'Collections'|trans }}
                        </span>
                        <a class="link-secondary" href="{{ path('app_addOwnCollection') }}">
                            <i class="bi bi-plus-circle"></i>
                        </a>
                    </h6>
                    {{ render_esi(url('list_own_collections')) }}
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="chartjs-size-monitor">
                    <div class="chartjs-size-monitor-expand">
                        <div class=""></div></div>
                    <div class="chartjs-size-monitor-shrink">
                        <div class=""></div>
                    </div>
                </div>
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    {% block profileTitle %}
                        <h1>it's BaseProfile, pls get out!</h1>
                    {% endblock %}
                </div>
                {% block profileContent %}
                    <p>some text on page</p>
                {% endblock %}
            </main>
        </div>
    </div>
{% endblock %}