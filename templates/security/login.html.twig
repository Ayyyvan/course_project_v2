{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <style>
        form {
            margin: auto;
            width:250px;
        }
    </style>

    <h1 class="h3 mb-3 font-weight-normal">{{ 'Please sign in'|trans }}</h1>
    <div class="form-floating">
        <input type="email" class="form-control" value="{{ last_username }}" name="email" id="floatingInput" placeholder="name@example.com" autocomplete="email" required autofocus>
        <label for="floatingInput">Email</label>
    </div>
    <div class="form-floating mb-3">
        <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password" autocomplete="current-password" required>
        <label for="floatingPassword">{{ 'Password'|trans }}</label>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    </div>
    <button class="w-100 btn btn-lg btn-primary" type="submit">{{ 'Sign in'|trans }}</button>
</form>
{% endblock %}
